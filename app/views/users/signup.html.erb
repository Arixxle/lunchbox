<h1>Sign up</h1>

<%= form_for(@user, url: '/sign_up', method: 'post') do |f| %>

  <% if @user.errors.any? %> 
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password, "密碼：" %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirm, "密碼確認：" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit "註冊" %>
  </div>
<% end %>


