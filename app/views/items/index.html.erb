<h1>餐點列表</h1>
<%= link_to "新增", new_item_path %>

<div class="container">
  <div class="row">
    <% @items.each do |item|%>
    <div class="col-12 col-md-4">
      <div class="card mt-3">
        <div class="overflow-hidden food-cover">
          <%= image_tag item.cover.variant(resize_to_limit: [500, 500]) if item.cover.attached? %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to item.name, item_path(item.id) %></h5>
          <p class="card-text"><%= item.category.name %></p>
          <%= link_to "編輯", edit_item_path(item.id), class: 'btn btn-info' %>
          <%= link_to "刪除", item_path(item.id), class: 'btn btn-danger', 
                                                  method: "delete", 
                                                  data: { confirm: "確定要刪除餐點？？"} %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>




