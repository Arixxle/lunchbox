<h2><%= @item.name %></h2>
<%= image_tag @item.cover.variant(resize_to_limit: [500, 500]) if @item.cover.attached? %>
<h5>價格：$<%= @item.price %>元</h5>

<h5>留言區</h5>
<%= form_for(@comment, url: item_comments_path(@item)) do |form| %>
<div class="form-group">
  <%= form.text_area :content, class: 'form-control' %>
</div>
  <%= form.submit class: 'btn btn-outline-secondary'%>
<% end %>
<hr>
<% @comments.each do |comment| %>
  <div class="alert alert-secondary" role="alert">
    <p><%= comment.content %></p>
    <hr>
    <p class="mb-0">post by <%= comment.user.email %> / <%= comment.created_at %></p>
  </div>
<% end %>



